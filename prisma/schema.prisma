// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id
  username      String    @unique
  password_hash String
  sessions      Session[]

  @@map("users")
}

model Session {
  id        String   @id
  userId    String // Change the type of userId to match the type of id in the User model
  expiresAt DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}
